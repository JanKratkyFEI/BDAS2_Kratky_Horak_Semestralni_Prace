@model List<HierarchieZamestnancu>

<h2>Hierarchie Zaměstnanců</h2>

<ul>
    @foreach (var employee in Model)
    {
        <li style="margin-left:@((employee.Level - 1) * 20)px">
            <strong>@employee.Pozice:</strong> @employee.Jmeno
            (Nadřízený: @(Model.FirstOrDefault(e => e.IdZamestnanec == employee.NadrazenyId)?.Jmeno ?? "N/A"))
        </li>
    }
</ul

