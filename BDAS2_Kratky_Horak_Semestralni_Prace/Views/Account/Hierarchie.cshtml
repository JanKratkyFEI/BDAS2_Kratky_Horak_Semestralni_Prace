@model List<HierarchieZamestnancu>

<h2>Hierarchie Zaměstnanců</h2>

<ul>
    @foreach (var employee in Model.Where(e => !e.NadrazenyId.HasValue))
    {
        <li>
            @employee.Pozice: @employee.Jmeno @employee.Prijmeni
            @Html.Partial("_RenderSubordinates", Model.Where(e => e.NadrazenyId == employee.IdZamestnanec).ToList())
        </li>
    }
</ul>

