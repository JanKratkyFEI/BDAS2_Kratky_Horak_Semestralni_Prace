@model BDAS2_Kratky_Horak_Semestralni_Prace.Models.Obec

<h2>Upravit obec</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdObec" />
    <div class="form-group">
        <label for="Nazev">Název obce</label>
        <input type="text" class="form-control" id="Nazev" name="Nazev" asp-for="Nazev" required />
    </div>

    <div class="form-group">
        <label for="IdZeme">Země</label>
        <select class="form-control" id="IdZeme" name="IdZeme" asp-for="IdZeme" required>
            <option value="">Vyberte zemi</option>
            @foreach (var zeme in ViewBag.ZemeList)
            {
                <option value="@zeme.IdZeme" selected="@((zeme.IdZeme == Model.IdZeme) ? "selected" : null)">@zeme.Nazev</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Uložit změny</button>
    <a asp-controller="Obec" asp-action="Index" class="btn btn-secondary">Zpět</a>
</form>
