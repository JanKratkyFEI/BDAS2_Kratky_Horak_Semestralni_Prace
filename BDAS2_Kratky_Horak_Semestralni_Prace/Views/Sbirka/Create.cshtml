@model BDAS2_Kratky_Horak_Semestralni_Prace.Models.Sbirka

<h2>Nová Sbírka</h2>

<form asp-controller="Sbirka" asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nazev">Název</label>
        <input type="text" class="form-control" id="Nazev" name="Nazev" required />
    </div>

    <div class="form-group">
        <label for="Popis">Popis</label>
        <textarea class="form-control" id="Popis" name="Popis" required></textarea>
    </div>

    <div class="form-group">
        <label for="IdMuzeum">Muzeum</label>
        <select class="form-control" id="IdMuzeum" name="IdMuzeum">
            @foreach (var muzeum in ViewBag.Muzea)
            {
                <option value="@muzeum.IdMuzeum">@muzeum.Nazev</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Vytvořit</button>
</form>

