@model IEnumerable<BDAS2_Kratky_Horak_Semestralni_Prace.Models.Sbirka>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Seznam Sbírek</h2>
    <a asp-controller="Sbirka" asp-action="Create" class="btn btn-primary">Přidat novou sbírku</a>
</div>
<div class="scrollable">
<table class="table table-striped">
    <thead>
        <tr>
            <th>Název</th>
            <th>Popis</th>
            <th>Muzeum</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sbirka in Model)
        {
            <tr>
                <td>@sbirka.Nazev</td>
                <td>@sbirka.Popis</td>
                <td>@sbirka.MuzeumNazev</td>
                <td>
                    <a asp-controller="Sbirka" asp-action="Edit" asp-route-id="@sbirka.IdSbirka" class="btn btn-sm btn-warning">Upravit</a>
                    <a asp-controller="Sbirka" asp-action="Delete" asp-route-id="@sbirka.IdSbirka" class="btn btn-sm btn-danger">Smazat</a>
                       

                </td>
            </tr>
        }
    </tbody>
</table>
</div>
