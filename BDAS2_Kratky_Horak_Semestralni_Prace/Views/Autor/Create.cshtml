@model BDAS2_Kratky_Horak_Semestralni_Prace.Models.Autor

<h2>Přidat nového autora</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Jmeno">Jméno</label>
        <input type="text" asp-for="Jmeno" class="form-control" />
        <span asp-validation-for="Jmeno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Prijmeni">Příjmení</label>
        <input type="text" asp-for="Prijmeni" class="form-control" />
        <span asp-validation-for="Prijmeni" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Přidat</button>
    <a asp-action="Index" class="btn btn-secondary">Zpět</a>
</form>

