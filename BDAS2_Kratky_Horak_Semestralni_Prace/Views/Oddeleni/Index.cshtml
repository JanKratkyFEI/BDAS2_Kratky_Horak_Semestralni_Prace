@model IEnumerable<BDAS2_Kratky_Horak_Semestralni_Prace.Models.Oddeleni>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Seznam Oddělení</h2>
    <a asp-action="Create" class="btn btn-primary">Přidat nové oddělení</a>
</div>
<div class="scrollable">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Název</th>
                <th>Muzeum</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var oddeleni in Model)
            {
                <tr>
                    <td>@oddeleni.Nazev</td>
                    <td>@oddeleni.MuzeumNazev</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@oddeleni.IdOddeleni" class="btn btn-warning btn-sm">Upravit</a>
                        <a asp-action="Delete" asp-route-id="@oddeleni.IdOddeleni" class="btn btn-danger btn-sm">Smazat</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


