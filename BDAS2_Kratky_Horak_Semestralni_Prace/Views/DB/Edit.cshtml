@model BDAS2_Kratky_Horak_Semestralni_Prace.Models.Predmet

@{
    ViewData["Title"] = "Upravit předmět";
}

<h2>Upravit předmět</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdPredmet" />

    <div class="form-group">
        <label>Název:</label>
        <input asp-for="Nazev" class="form-control" />
        <span asp-validation-for="Nazev" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Popis:</label>
        <textarea asp-for="Popis" class="form-control"></textarea>
        <span asp-validation-for="Popis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Typ:</label>
        <select asp-for="Typ" class="form-control">
            <option value="Fotografie">Fotografie</option>
            <option value="Obraz">Obraz</option>
            <option value="Socha">Socha</option>
        </select>
        <span asp-validation-for="Typ" class="text-danger"></span>
    </div>

    <!-- Specifické atributy dle typu předmětu budou přidány zde -->

    <button type="submit" class="btn btn-primary">Uložit změny</button>
    <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
</form>

